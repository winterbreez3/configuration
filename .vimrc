syntax on
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab     " enter spaces when tab in pressed
set smartindent
set smarttab
set ai
set number
set hlsearch
set ruler
set mouse=a

set t_md= " disable the bold font in mac terminal
highlight Comment ctermfg=DarkGreen

" highlight LineNr term=bold cterm=NONE ctermfg=208 ctermbg=NONE gui=NONE guifg=#ff8700 guibg=NONE
highlight LineNr ctermfg=brown
